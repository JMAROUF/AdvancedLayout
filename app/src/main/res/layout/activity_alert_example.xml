<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="30dp"
    tools:context="com.example.jamal.layoutavances.AlertExample">
    <Button
        android:id="@+id/b1"
        android:text="Message long"
        android:layout_width="match_parent"
        android:background="@drawable/style_btn"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/b2"
        android:text="Message short"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/style_btn"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="durée(s):"/>
        <EditText
            android:id="@+id/t1"
            android:inputType="numberDecimal"
            android:layout_width="120sp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rectangle_style"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/b3"
            android:text="Message durée fixe"
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:background="@drawable/style_btn"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/b5"
        android:text="Alert seul option (OK)"
        android:background="@drawable/style_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/b6"
        android:layout_marginTop="10dp"
        android:text="Alert a deux options(oui|non)"
        android:background="@drawable/style_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/b7"
        android:layout_marginTop="10dp"
        android:background="@drawable/style_btn"
        android:text="Alert a deux options(oui|Annuler | non)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
